// TSConfig for webapp running in browser environment
{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        /* Basic Options */
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "jsx": "react-jsx",
        "noEmit": true,
        "outDir": "./dist",
        /* Strict Type-Checking Options */
        "strict": true,
        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        /* Module Resolution Options */
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        /* Source Map Options */
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        /* Path Mapping  */
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.d.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}